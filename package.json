{
    "name": "fipi-math",
    "version": "1.0.0",
    "description": "Website for preparing for the exam",
    "main": "index.js",
    "author": "Nikita",
    "license": "MIT",
    "scripts": {
        "start:server:dev": "npm --cwd ./server start:dev",
        "start:server": "npm --cwd ./server start",
        "start:server:prod": "npm --cwd ./server start:prod",
        "start:client": "npm --cwd ./client start",
        "build:client": "npm --cwd ./client build",
        "build:server": "npm --cwd ./server build",
        "start:dev": "concurrently \"npm start:server:dev\" \"npm start:client\"",
        "start": "concurrently \"npm start:server\" \"npm start:client\"",
        "start:prod": "concurrently \"npm start:server:prod\" \"npm start:client\"",
        "build": "concurrently \"npm run build:server\" \"npm run build:client\""
    },
    "dependencies": {
        "concurrently": "^8.2.2"
    }
}
